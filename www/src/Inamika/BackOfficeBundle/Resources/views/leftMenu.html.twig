<aside class="left-sidebar">
    <!-- Sidebar scroll-->
    <div class="scroll-sidebar">
        <!-- Sidebar navigation-->
        <nav class="sidebar-nav">
            <ul id="sidebarnav">
                <li class="{% if (app.request.get('_route') == 'inamika_backoffice_homepage') %}active{% endif %}">
                    <a href="{{ path('inamika_backoffice_homepage')}}" aria-expanded="false">
                        <i class="mdi mdi-gauge"></i><span class="hide-menu">{{ 'DASHBOARD' | trans }}</span>
                    </a>
                </li>
                <li class="{% if ('inamika_backoffice_customers' in app.request.get('_route') ) %}active{% endif %}">
                    <a href="{{ path('inamika_backoffice_customers')}}" aria-expanded="false">
                        <i class="mdi mdi-account"></i><span class="hide-menu">{{ 'CUSTOMERS' | trans }}</span>
                    </a>
                </li>
                
                
                 <li class="{% 
                if 'inamika_backoffice_setting' in app.request.get('_route') or
                'inamika_backoffice_users' in app.request.get('_route') or
                'inamika_backoffice_popups' in app.request.get('_route') 
                %}active{% endif %}">
                    <a class="sidebar-link has-arrow waves-effect waves-dark" aria-expanded="false">
                        <i class="mdi mdi-settings"></i><span class="hide-menu">{{ 'SETTING' | trans }}</span>
                    </a>
                    <ul aria-expanded="false" class="collapse first-level">
                        {% if is_granted('ROLE_SUPER') %}
                        <li class="sidebar-item">
                            <a class="sidebar-link {% if 'inamika_backoffice_users' in app.request.get('_route') %}active{% endif %}" href="{{ path('inamika_backoffice_users')}}" aria-expanded="false">
                                <i class="mdi mdi-minus"></i>
                                <span >{{ 'USERS' | trans }} </span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link {% if 'inamika_backoffice_setting' in app.request.get('_route') %}active{% endif %}" href="{{ path('inamika_backoffice_setting')}}" aria-expanded="false">
                                <i class="mdi mdi-minus"></i>
                                <span >{{ 'SETTING' | trans }} </span>
                            </a>
                        </li>
                        {% endif %}
                    </ul>
                </li>
            </ul>
        </nav>
        <!-- End Sidebar navigation -->
    </div>
    <!-- End Sidebar scroll-->
</aside>